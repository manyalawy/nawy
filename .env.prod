# Production Environment Variables
# IMPORTANT: Replace all placeholder values before deploying

# Database
POSTGRES_USER=nawy
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=nawy_db
DATABASE_URL=postgresql://nawy:CHANGE_ME_SECURE_PASSWORD@your-db-host:5432/nawy_db

# JWT (generate a secure random string)
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET

# Service Ports
AUTH_SERVICE_PORT=3002
APARTMENT_SERVICE_PORT=3003
API_GATEWAY_PORT=3001
FRONTEND_PORT=3000

# Service URLs (Docker internal network)
AUTH_SERVICE_URL=http://auth-service:3002
APARTMENT_SERVICE_URL=http://apartment-service:3003

# Frontend (replace with your production domain)
NEXT_PUBLIC_API_URL=https://api.your-domain.com/api/v1

# CORS (replace with your production frontend domain)
CORS_ORIGIN=https://your-domain.com

# Redis
REDIS_URL=redis://redis:6379
